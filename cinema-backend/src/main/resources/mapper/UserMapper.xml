<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tt.cm.mapper.UserMapper">

    <resultMap id="UserMap" type="User">
        <id property="userId" column="user_id"></id>
        <result property="roleId" column="role_id"></result>
        <association property="role" column="role_id" select="com.tt.cm.mapper.RoleMapper.findRoleById"></association>
    </resultMap>

    <resultMap id="loginUserMap" type="LoginUser">
        <id property="user.userId" column="user_id"></id>
        <result property="user.userName" column="user_name"></result>
        <result property="user.password" column="password"></result>
        <result property="user.salt" column="salt"></result>
        <result property="user.email" column="email"></result>
        <result property="user.phoneNumber" column="phone_number"></result>
        <result property="user.sex" column="sex"></result>
        <result property="user.userPicture" column="user_picture"></result>
        <result property="user.birthday" column="birthday"></result>
        <result property="user.autograph" column="autograph"></result>
        <result property="user.roleId" column="role_id"></result>
        <association property="user.role" column="role_id" select="com.tt.cm.mapper.RoleMapper.findRoleById"></association>
        <association property="user.role.children" column="role_id" select="com.tt.cm.mapper.RoleMapper.findByRoleId"></association>
    </resultMap>

    <select id="findAllUsers" resultMap="UserMap" parameterType="User">
        select * from user
        <where>
            del_state = 0
            <if test="userName != null and userName != ''">
                and user_name like concat('%', #{userName}, '%')
            </if>
            <if test="email != null and email != ''">
                and email like concat('%', #{email}, '%')
            </if>
            <if test="phoneNumber != null and phoneNumber != ''">
                and phone_number like concat('%', #{phoneNumber}, '%')
            </if>
            <if test="sex != null">
                and sex = #{sex}
            </if>
            <if test="roleId != null and roleId != ''">
                and role_id = #{roleId}
            </if>
        </where>
    </select>

    <select id="findUserById" resultMap="UserMap" parameterType="long">
        select * from user where user_id = #{id}
    </select>

    <select id="findUserByName" resultMap="UserMap" parameterType="String">
        select * from user where user_name = #{userName} and del_state = 0
    </select>

    <update id="addUser" parameterType="User">
        <!-- 将添加后的主键id传回原对象 -->
        <selectKey keyProperty="userId" keyColumn="user_id" resultType="long" order="AFTER">
            select last_insert_id();
        </selectKey>
        insert into user(
        user_name,
        password,
        salt,
        <if test="email != null and email != ''">email,</if>
        <if test="phoneNumber != null and phoneNumber != ''">phone_number,</if>
        <if test="userPicture != null and userPicture != ''">user_picture,</if>
        <if test="roleId != null and roleId != 0"> role_id, </if>
        sex
        )
        values(
        #{userName},
        #{password},
        #{salt},
        <if test="email != null and email != ''">#{email},</if>
        <if test="phoneNumber != null and phoneNumber != ''">#{phoneNumber},</if>
        <if test="userPicture != null and userPicture != ''">#{userPicture},</if>
        <if test="roleId != null and roleId != 0">#{roleId}, </if>
        #{sex})
    </update>

    <update id="updateUser" parameterType="User">
        update user set
        user_name = #{userName},
        password = #{password},
        salt = #{salt},
        <if test="email != null and email != ''">email = #{email},</if>
        <if test="phoneNumber != null and phoneNumber != ''">phone_number = #{phoneNumber}, </if>
        <if test="userPicture != null and userPicture != ''">user_picture = #{userPicture},</if>
        <if test="birthday != null and birthday != ''" >birthday = #{birthday},</if>
        <if test="autograph != null and autograph != ''" >autograph = #{autograph},</if>
        <if test="roleId != null and roleId != 0">role_id = #{roleId}, </if>
        sex = #{sex}
        where user_id = #{userId}
    </update>

    <update id="deleteUser" parameterType="Long">
        update user set del_state = 1 where user_id = #{id}
    </update>

    <!-- 查询登录用户信息 -->
    <select id="findLoginUser" parameterType="SysUserVo" resultMap="loginUserMap">
        select * from user where user_name = #{userName} limit 0,1
    </select>

    <!-- 查询用户名出现的次数，用于校验用户名唯一性 -->
    <select id="checkUserNameUnique" parameterType="String" resultType="Long">
        select user_id from user where user_name = #{userName}
    </select>

</mapper>